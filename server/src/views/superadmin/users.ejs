<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/superadmin-theme.css" />
</head>
<body class="sa-body">
  <div class="sa-app">
    <aside class="sa-sidebar">
      <a class="sa-brand" href="/superadmin/dashboard">
        <span class="sa-brand-icon"><i class="fas fa-crown"></i></span>
        <span>SuperAdmin</span>
      </a>
      <div class="sa-menu-label">Management</div>
      <ul class="sa-nav">
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/dashboard"><i class="fas fa-chart-pie"></i> Dashboard</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/admin-requests"><i class="fas fa-user-check"></i> Admin Requests</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/getAllAdminDetails"><i class="fas fa-users"></i> Admin Details</a></li>
        <li class="sa-nav-item"><a class="sa-link active" href="/superadmin/users"><i class="fas fa-user-group"></i> Users</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/enquiries"><i class="fas fa-envelope-open-text"></i> Enquiries</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/pending-course-subjects"><i class="fas fa-book-open"></i> Subject Requests</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/pending-user-reviews"><i class="fas fa-star-half-alt"></i> User Reviews</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/logout"><i class="fas fa-right-from-bracket"></i> Logout</a></li>
      </ul>
    </aside>

    <main class="sa-main">
      <header class="sa-topbar">
        <div class="sa-search"><i class="fas fa-search"></i><input type="text" placeholder="Search users..." /></div>
        <div class="sa-top-actions"><button class="sa-icon-btn" type="button"><i class="far fa-bell"></i></button><span class="sa-avatar">S</span></div>
      </header>

      <section class="sa-content">
        <h1 class="sa-page-title">All Users</h1>
        <p class="sa-page-subtitle">Freeze and unfreeze user accounts globally.</p>

        <% if (data && data.length > 0) { %>
          <div class="sa-table-wrap">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Course</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(user => { %>
                  <tr>
                    <td><strong><%= user.username %></strong></td>
                    <td><%= user.email %></td>
                    <td><%= user.cource || 'N/A' %></td>
                    <td><%= user.phone || 'N/A' %></td>
                    <td>
                      <% if (user.isBlocked) { %>
                        <span class="badge bg-danger">Blocked</span>
                      <% } else { %>
                        <span class="badge bg-success">Active</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (user.isBlocked) { %>
                        <button type="button" class="btn btn-sm btn-success action-btn" data-action="unfreeze" data-id="<%= user._id %>">Unfreeze</button>
                      <% } else { %>
                        <button type="button" class="btn btn-sm btn-warning action-btn" data-action="freeze" data-id="<%= user._id %>">Freeze</button>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="sa-card sa-empty">
            <i class="fas fa-inbox"></i>
            <h4>No Users Found</h4>
          </div>
        <% } %>
      </section>
    </main>
  </div>

  <script>
    document.querySelectorAll(".action-btn").forEach((btn) => {
      btn.addEventListener("click", async () => {
        const id = btn.dataset.id;
        const action = btn.dataset.action;
        const endpoint = action === "freeze" ? `/superadmin/freezeUser/${id}` : `/superadmin/unfreezeUser/${id}`;
        const okText = action === "freeze" ? "User frozen successfully" : "User unfrozen successfully";

        if (!confirm(`Are you sure you want to ${action} this user?`)) return;
        try {
          const res = await fetch(endpoint, { method: "POST" });
          if (!res.ok) return alert("Action failed");
          alert(okText);
          window.location.reload();
        } catch (e) {
          alert("Request failed");
        }
      });
    });
  </script>
</body>
</html>
