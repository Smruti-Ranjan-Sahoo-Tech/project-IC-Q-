<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pending Course Subjects</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/superadmin-theme.css" />
</head>
<body class="sa-body">
  <div class="sa-app">
    <aside class="sa-sidebar">
      <a class="sa-brand" href="/superadmin/dashboard">
        <span class="sa-brand-icon"><i class="fas fa-crown"></i></span>
        <span>SuperAdmin</span>
      </a>
      <div class="sa-menu-label">Management</div>
      <ul class="sa-nav">
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/dashboard"><i class="fas fa-chart-pie"></i> Dashboard</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/admin-requests"><i class="fas fa-user-check"></i> Admin Requests</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/getAllAdminDetails"><i class="fas fa-users"></i> Admin Details</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/users"><i class="fas fa-user-group"></i> Users</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/enquiries"><i class="fas fa-envelope-open-text"></i> Enquiries</a></li>
        <li class="sa-nav-item"><a class="sa-link active" href="/superadmin/pending-course-subjects"><i class="fas fa-book-open"></i> Subject Requests</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/pending-user-reviews"><i class="fas fa-star-half-alt"></i> User Reviews</a></li>
        <li class="sa-nav-item"><a class="sa-link" href="/superadmin/logout"><i class="fas fa-right-from-bracket"></i> Logout</a></li>
      </ul>
    </aside>

    <main class="sa-main">
      <header class="sa-topbar">
        <div class="sa-search">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search subject requests..." />
        </div>
        <div class="sa-top-actions">
          <button class="sa-icon-btn" type="button"><i class="far fa-bell"></i></button>
          <span class="sa-avatar">S</span>
        </div>
      </header>

      <section class="sa-content">
        <h1 class="sa-page-title">Pending Course Subject Requests</h1>
        <p class="sa-page-subtitle">Process add and delete requests for course subjects.</p>

        <div class="sa-kpi-grid">
          <article class="sa-card">
            <p class="sa-kpi-value"><%= data ? data.length : 0 %></p>
            <p class="sa-kpi-label mb-0">Pending Requests</p>
          </article>
        </div>

        <div class="row g-3">
          <div class="col-lg-3">
            <div class="sa-card">
              <h5 class="mb-3">Admins</h5>
              <div class="d-grid gap-2">
                <a href="/superadmin/pending-course-subjects" class="btn <%= !selectedAdminEmail ? 'btn-primary' : 'btn-outline-primary' %> btn-sm text-start">All Admins</a>
                <% (requestAdmins || []).forEach(item => { %>
                  <a
                    href="/superadmin/pending-course-subjects?adminEmail=<%= encodeURIComponent(item.email) %>"
                    class="btn <%= selectedAdminEmail === item.email.toLowerCase() ? 'btn-primary' : 'btn-outline-primary' %> btn-sm text-start"
                  >
                    <%= item.name %>
                  </a>
                <% }) %>
              </div>
            </div>
          </div>
          <div class="col-lg-9">
        <% if (data && data.length > 0) { %>
          <div class="sa-table-wrap">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Course</th>
                  <th>Subject</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(item => { %>
                  <tr>
                    <td><strong><%= item.course %></strong></td>
                    <td><%= item.name %></td>
                    <td>
                      <% if (item.status === 'delete_pending') { %>
                        <span class="badge bg-danger">DELETE PENDING</span>
                      <% } else { %>
                        <span class="badge bg-warning text-dark">ADD PENDING</span>
                      <% } %>
                    </td>
                    <td>
                      <div class="d-flex gap-2 justify-content-center flex-wrap">
                        <button
                          type="button"
                          class="btn btn-success btn-sm action-btn"
                          data-action="approve"
                          data-course-id="<%= item.courseId %>"
                          data-subject-id="<%= item.subjectId %>"
                        >
                          <% if (item.status === 'delete_pending') { %>
                            <i class="fas fa-check"></i> Approve Delete
                          <% } else { %>
                            <i class="fas fa-check"></i> Approve Add
                          <% } %>
                        </button>

                        <button
                          type="button"
                          class="btn btn-danger btn-sm action-btn"
                          data-action="reject"
                          data-course-id="<%= item.courseId %>"
                          data-subject-id="<%= item.subjectId %>"
                        >
                          <% if (item.status === 'delete_pending') { %>
                            <i class="fas fa-times"></i> Reject Delete
                          <% } else { %>
                            <i class="fas fa-times"></i> Reject Add
                          <% } %>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="sa-card sa-empty">
            <i class="fas fa-inbox"></i>
            <h4>No Pending Subject Requests</h4>
            <p>All subject requests are processed.</p>
          </div>
        <% } %>
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    document.querySelectorAll('.action-btn').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const action = btn.dataset.action;
        const courseId = btn.dataset.courseId;
        const subjectId = btn.dataset.subjectId;

        const confirmMessage = action === 'approve'
          ? 'Approve this subject request?'
          : 'Reject this subject request?';

        if (!confirm(confirmMessage)) return;

        const url = action === 'approve'
          ? `/superadmin/approveCourseSubject/${courseId}/${subjectId}`
          : `/superadmin/rejectCourseSubject/${courseId}/${subjectId}`;
        const method = action === 'approve' ? 'PATCH' : 'DELETE';

        try {
          const response = await fetch(url, { method });
          if (!response.ok) {
            alert('Action failed. Please try again.');
            return;
          }
          window.location.href = '/superadmin/pending-course-subjects';
        } catch (error) {
          alert('Request failed. Please try again.');
        }
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
